<%= form_with url: "/flights", method: :get do |form| %>
  <%= form.label "Departing From" %>
  <%= form.select( :departure_airport_code, 
                    options_for_select(
                    @airport_options),
                    required:true 
                    ) %><br />
  <%= form.label "Arriving in" %>
  <%= form.select( :arrival_airport_code, 
                    options_for_select(
                    @airport_options),
                    required:true 
                    ) %><br />
  <%= form.label "Number of Passengers" %>
  <%= form.select :num_tickets, (1..4) %><br />
  <%= form.label "Select the Departure Date"%>
  <%= form.date_field :departure_time %><br />
  <%= form.submit "Search for flights" %>
<% end %>