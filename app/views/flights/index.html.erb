<h1>Welcome to the Flight booker!</h1>
<%= form_with url: "/flights", method: :get do |form| %>
  <%= form.label "Departing From" %>
  <%= form.select( :departure_airport_code, 
                    options_for_select(
                    @airport_options),
                    required:true 
                    ) %><br />
  <%= form.label "Arriving in" %>
  <%= form.select( :arrival_airport_code, 
                    options_for_select(
                    @airport_options),
                    required:true 
                    ) %><br />
  <%= form.label "Number of Passengers" %>
  <%= form.select :num_tickets, (1..4) %><br />
  <%= form.label "Select the Departure Date"%>
  <%= form.date_field :departure_time %><br />
  <%= form.submit "Search for flights" %>
<% end %>

<% if @flight_result.present?%>
    <div id ="flight-result">
        <%= form_with do |form|%>
            <% @flight_result.each do |flight| %>
                <div id="event">
                        <h3 id="Flight-name">
                            <% form.label :booking_option %>
                            <%= form.radio_button :booking_option, required: true %>
                            <%= flight.flight_name %>
                        </h3>
                        <div>
                            Departure Time: 
                            <%= flight.departure_time %>
                        </div>
                        <div>
                            Flight duration: 
                            <%= flight.duration %> hours
                        </div>
                </div>
            <% end %>
        <% end %>
    </div>
<% end %>

